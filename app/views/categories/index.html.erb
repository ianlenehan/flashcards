<% if notice %>
<p id="notice"><div class="alert alert-success" role="alert"><%= notice %></div></p>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"> Categories</h3> <span><%= link_to 'New', new_category_path %></span>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th># Decks</th>

          <th colspan="3"></th>
        </tr>
      </thead>
<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.decks.length %></td>

      <td><%= link_to 'Show', category %></td>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
  </div>
</div>
