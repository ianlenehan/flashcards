<p id="notice"><%= notice %></p>

<h1>All Decks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cards</th>

      <th>Owner</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= deck.cards.length %></td>
        <td><%= deck.user.name_first %> <%= deck.user.name_last %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>
