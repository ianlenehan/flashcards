<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <% if @current_user.admin == true %>
    <h3 class="panel-title">All Decks</h3> <span><%= link_to '+ Add', new_deck_path %></span>
    <% else %>
    <h3 class="panel-title">My Decks</h3> <span><%= link_to '+ Add', new_deck_path %></span>
    <% end %>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cards</th>
          <th>Owner</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
<tbody>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.name %></td>
    <td><%= deck.cards.length %></td>
    <td><%= deck.user.name_first %> <%= deck.user.name_last %></td>
    <td><%= link_to 'Cards', deck %></td>
    <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
    <td><%= link_to 'Delete', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
  </div>
</div>
