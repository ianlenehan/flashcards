      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="form-group">
  <%= f.label :First_name %><br>
  <%= f.text_field :name_first, :required => true , class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :Last_name %><br>
  <%= f.text_field :name_last, :required => true , class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :email %><br>
  <%= f.text_field :email, :required => true , class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :password %><br>
  <%= f.password_field :password, :required => true , class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation, :required => true , class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label :photo %><br>
  <span class="upload"><%= f.file_field :photo, :required => true %></span>
</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>
